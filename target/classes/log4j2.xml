<Configuration status="warn" name="rpa" packages="">
    <Appenders>
        <Console name="stdout" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %p %m%n"/>
        </Console>
    </Appenders>
    
  <Loggers>
    <Logger name="com.optiim.homework" level="trace" additivity="false">
      <AppenderRef ref="stdout"/>
    </Logger>
    <Root level="error">
      <AppenderRef ref="stdout"/>
    </Root>
  </Loggers>

</Configuration>